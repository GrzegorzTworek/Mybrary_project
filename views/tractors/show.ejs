<h2 class="page-header"><%= tractor.title %></h2>
<div class="tractor-details">
  <div>
    <img class="tractor-cover" src="<%= tractor.coverImagePath %>" />
    <div class="tractor-details-btn-grid">
      <a class="btn btn-primary" href="/tractors/<%= tractor.id %>/edit"
        >Edit</a
      >
      <%- include('../partials/deleteForm', {url: `/tractors/${tractor.id}`}) %>
      <a
        class="btn btn-primary tractor-details-author-button"
        href="/authors/<%= tractor.author.id %>"
        >View Author</a
      >
    </div>
  </div>
  <div class="tractor-details-grid">
    <div class="tractor-details-label">Author:</div>
    <div><%= tractor.author.name %></div>
    <div class="tractor-details-label">Publish Date:</div>
    <div><%= tractor.publishDate.toDateString() %></div>
    <div class="tractor-details-label">Page Count:</div>
    <div><%= tractor.pageCount %></div>
    <div class="tractor-details-label">Description:</div>
    <div><%= tractor.description %></div>
  </div>
</div>
